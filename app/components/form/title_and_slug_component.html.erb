<div class="mb-3" data-controller="slug"
data-post_form-target="titleAndSlug" data-slug-url-value="<%= slugs_path %>"<%= raw(" data-default-title=\"#{ERB::Util.html_escape(default_title)}\"") if default_title %>>
  <%= helpers.component(
    'form/text_field',
    form:, attribute: :title,
    data: { slug_target: 'title', action: 'slug#generate' }
  ) %>
  <%= helpers.component(
    'form/text_field',
    form:, attribute: :slug,
    data: { slug_target: 'slug', action: 'slug#validate' }, placeholder: '/a-nice-slug'
  ) %>
</div>
