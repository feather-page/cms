<% @books.each do |year, books| %>
  <h2><%= year %> (<%= books.count %>)</h2>
  <table>
    <% books.each do |book| %>
      <tr>
        <td><%= book.emoji %> <%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= l(book.read_at.to_date) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
