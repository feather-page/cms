<picture>
  <%- sources.each do |source| %>
    <source srcset="<%= source[:srcset] %>" type="<% source[:mime] %>">
  <% end %>

  <img
    loading="lazy" height="<%= image.height %>" width="<%= image.width %>"
    src="<%= variant_url(:desktop_x1_jpg) %>" alt="<%= caption %>"
  />
  <%= raw(figcaption) %>
</picture>
