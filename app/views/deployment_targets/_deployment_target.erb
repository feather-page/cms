<%= turbo_frame_tag(deployment_target) do %>
  <tr>
    <td><%= deployment_target.public_hostname %></td>
    <td><%= t("deployment_target.types.#{deployment_target.type}") %></td>
    <td class="text-end">
      <%= link_to 'Edit', edit_site_deployment_target_path(current_site, deployment_target), class: 'btn btn-outline-secondary btn-sm' %>
      <%= link_to 'Deploy', deploy_site_deployment_target_path(current_site, deployment_target), class: 'btn btn-outline-primary btn-sm', data: { turbo_method: :post } %>
    </td>
  </tr>
<% end %>
