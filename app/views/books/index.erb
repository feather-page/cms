<div class="page-header">
  <h1 class="h4"><%= icon('book') %> <%= Book.model_name.human.pluralize %></h1>
  <%= link_to "New Book", new_site_book_path, data: { turbo_frame: "new_book" }, class: 'btn btn-primary' %>
</div>

<div class="table-responsive">
<table class="table table-bordered w-100">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Read at</th>
      <th class="w-auto"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @books %>
  </tbody>
</table>
</div>
