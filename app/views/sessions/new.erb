<h1 class="title">Login</h1>

<%= turbo_frame_tag('login') do %>
  <p class="title is-6">Enter your Email and we send you a link to login again.</p>

  <%= form_with(url: login_url) do |f| %>
    <div class="field">
      <%= f.label(:email, class: "label") %>
      <div class="control">
        <%= f.email_field(:email, placeholder: 'name@example.com', class: "input", required: true) %>
      </div>
    </div>

    <div class="field is-grouped">
      <%= f.submit "Continue", class: "button is-link" %>
      &nbsp;
      <%= link_to("Cancel", root_path, "data-turbo-frame": '_top', class: "button is-link is-light") %>
    </div>
  <% end %>
<% end %>
