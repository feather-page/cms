<%= turbo_frame_tag(:content) do %>
  <h1 class="title">🤹‍♀️ Dashboard</h1>

  <%= link_to('🖊 New Post', new_site_post_path(current_site), class: 'button') %>
  <%= link_to('📑 New Page', new_site_page_path(current_site), class: 'button') %>

  <hr />
  <div class="mt-4">
    <h2 class="title is-4">🖊 Latest Blogposts</h2>
    <%= turbo_frame_tag(:posts) do %>
      <%= render @posts  %>
    <% end %>
  </div>
<% end %>
