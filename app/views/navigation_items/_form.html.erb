<%= turbo_frame_tag(navigation_item.navigation, "new_item_form") do %>
  <div class="box">
    <%= form_for([current_site, navigation_item.navigation, navigation_item], class: "mb-4") do |form| %>
      <div class="columns">
        <div class="column">
          <%= form.label :title %>
          <%= form.text_field(:title, placeholder: 'Title', class: 'input has-text-weight-bold') %>
        </div>
        <div class="column">
          <%= form.label :external_url %>
          <%= form.text_field(:external_url, placeholder: 'https://example.com/awesome', class: 'input') %>
        </div>
      </div>
      <%= form.submit(class: "button is-small is-primary") %>
      <%= link_to("Cancel", site_navigations_path, class: "button is-small", "data-turbo-frame": '_top') %>
    <% end %>
  </div>
<% end %>

